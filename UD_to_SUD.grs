package raise_gov{
  rule raise_mod{
    pattern {
      G -> D; D >> G; MOD << G;
      mod_rel:D -[mod]-> MOD
    }
%    without { MOD [lemma = "oÃ¹"]}  French specificity
    commands {
      del_edge mod_rel;
      add_edge G -[mod]-> MOD
    }
  }

}

