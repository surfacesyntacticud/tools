    }
    commands {
      del_edge e;
      add_edge AUX -[comp:cop]-> V;
      AUX.cat=VERB;
      shift_in V ==> AUX;
      shift_out V =[^ acl|acl:relcl|amod|det|case|nmod|nummod|obl:arg]=> AUX;
