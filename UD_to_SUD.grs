package reverse{
  rule left_case{
    pattern { e:H-[case]->X1; X1 << H; }
    without { H-[mark|case]->X2; X1 << X2 }
    commands {
    del_edge e;
    add_edge X1-[comp]-> H;
    shift_in H==>X1;
    %shift_out H=[^det|aux|aux:pass|nsubj|obj|appos|punct|flat:name|nmod|nummod|comp|amod]=>X1;
    }
  }

  rule left_mark{
    pattern { e:H-[mark]->X1; X1 << H }
    without { H-[mark|case]->X2; X1 << X2 }
    commands {
    del_edge e;
    add_edge X1-[comp]-> H;
    shift_in H==>X1;
    shift_out H=[cc]=>X1;
    }
  }

  rule right_case{
    pattern { e:H-[case]->X1; X1 >> H; }
    without { H-[mark|case]->X2; X1 >> X2 }
    commands {
    del_edge e;
    add_edge X1-[comp]-> H;
    shift_in H==>X1;
    shift_out H=[^det|aux|aux:pass|nsubj|obj|appos|punct|flat:name|nmod|nummod|comp|amod]=>X1;
    }
  }

  rule right_mark{
    pattern { e:H-[mark]->X1; X1 >> H }
    without { H-[mark|case]->X2; X1 >> X2 }
    commands {
    del_edge e;
    add_edge X1-[comp]-> H;
    shift_in H==>X1;
    shift_out H=[^det|comp|comp:aux|comp:cop|aux:pass|nsubj|nsubj:pass|obj|obl:mod|obl:arg]=>X1;
    }
  }
}

