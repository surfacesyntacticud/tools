package final {
  rule mwepos {
    pattern { N [token_upos, cat]}
    commands { N.cat = N.token_upos; del_feat N.token_upos; }
  }

  rule del_nom{
    pattern{W[nom=y]}
    commands{del_feat W.nom}
  }

}

