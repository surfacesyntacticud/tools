strat FR_main {
  Seq(
    Onf(FR_init),
    Onf(idioms),
    specific_expr_init,
    Onf (FR_relations),
    Onf (sub_relations),
    Onf (rel_extensions),
    Onf (relations),
    reverse_relations.main,
    Onf(FR_shift_out_edges),
    Onf(FR_shift_out_back_edges),
    Onf (minimize_conj_dep),
    Onf (add_conj_emb),
    Onf (chained_relations),
    Onf (unk_rel),
    specific_expr_close,
    Onf(FR_pron_verb),
  )
}

